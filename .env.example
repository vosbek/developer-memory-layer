# Developer Memory Layer - Environment Configuration

# ===========================================
# BASIC CONFIGURATION (Required)
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/memory_layer
REDIS_URL=redis://redis:6379

# Application Settings
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
FRONTEND_URL=http://localhost:3000

# ===========================================
# AI & SEARCH CONFIGURATION (Optional)
# ===========================================

# OpenAI for embeddings and smart features
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vector Database (choose one)
# Option 1: Pinecone (cloud-hosted)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Option 2: Weaviate (self-hosted)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-key

# ===========================================
# EXTERNAL INTEGRATIONS (Optional)
# ===========================================

# GitHub Integration
GITHUB_CLIENT_ID=your-github-app-client-id
GITHUB_CLIENT_SECRET=your-github-app-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Microsoft 365 Integration (Teams, Outlook, OneNote)
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# Jira Integration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_USER_EMAIL=your-jira-user-email

# ServiceNow Integration
SERVICENOW_INSTANCE_URL=https://your-company.service-now.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

# Figma Integration
FIGMA_ACCESS_TOKEN=your-figma-access-token

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# ===========================================
# ENTERPRISE FEATURES (Team/Company)
# ===========================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Analytics & Monitoring
ANALYTICS_ENABLED=false
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# ===========================================
# FEATURE FLAGS
# ===========================================

# Core Features
ENABLE_VECTOR_SEARCH=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_MEMORY_SHARING=true

# AI Features
ENABLE_AUTO_TAGGING=true
ENABLE_SMART_CONNECTIONS=true
ENABLE_CONTENT_ANALYSIS=true

# Integration Features
ENABLE_GITHUB_SYNC=false
ENABLE_M365_SYNC=false
ENABLE_JIRA_SYNC=false
ENABLE_FIGMA_SYNC=false

# Team Features
ENABLE_TEAM_COLLABORATION=true
ENABLE_KNOWLEDGE_ANALYTICS=false
ENABLE_EXPERTISE_MAPPING=false